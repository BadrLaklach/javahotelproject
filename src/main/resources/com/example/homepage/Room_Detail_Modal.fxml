<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="633.0" prefWidth="940.0" style="-fx-background-color: #ffffff;"
           xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.homepage.RoomDetailModalController">
   <children>
      <!-- Room Image -->
      <ImageView fx:id="roomImage" fitHeight="349.0" fitWidth="940.0" pickOnBounds="true"
                 StackPane.alignment="TOP_CENTER" />

      <!-- Close Button -->
      <Button fx:id="closeButton" mnemonicParsing="false" prefHeight="33.0" prefWidth="33.0"
              style="-fx-background-radius: 71; -fx-border-radius: 71; -fx-background-color: #ffffff;"
              text="X" StackPane.alignment="TOP_RIGHT">
         <StackPane.margin>
            <Insets right="20.0" top="20.0" />
         </StackPane.margin>
      </Button>

      <!-- Room Title -->
      <Label fx:id="roomTitle" textFill="#105884" StackPane.alignment="TOP_LEFT">
         <font>
            <Font name="Inknut Antiqua Bold" size="16.0" />
         </font>
         <StackPane.margin>
            <Insets left="30.0" top="140.0" />
         </StackPane.margin>
      </Label>

      <!-- Room Description -->
      <TextArea fx:id="roomDescription" editable="false" maxHeight="189.0" maxWidth="387.0"
                prefHeight="159.0" prefWidth="387.0" style="-fx-background-color: #ffffff;"
                wrapText="true">
         <StackPane.margin>
            <Insets right="480.0" top="380.0" />
         </StackPane.margin>
      </TextArea>

      <!-- Services Container -->
      <FlowPane fx:id="servicesContainer" hgap="50.0" vgap="20.0" maxWidth="300.0"
                StackPane.alignment="CENTER_RIGHT">
         <StackPane.margin>
            <Insets right="50.0" top="175.0" />
         </StackPane.margin>
      </FlowPane>

      <!-- Book Now Button -->
      <Button fx:id="bookNowButton" maxHeight="45.0" mnemonicParsing="false"
              prefWidth="220.0" style="-fx-background-color: #008CE3; -fx-background-radius: 69; -fx-border-radius: 69;"
              text="BOOK NOW" textFill="WHITE" StackPane.alignment="BOTTOM_RIGHT">
         <StackPane.margin>
            <Insets bottom="20.0" right="35.0" />
         </StackPane.margin>
      </Button>

      <!-- Price Label -->
      <Label fx:id="priceLabel" textFill="#105884" StackPane.alignment="BOTTOM_LEFT">
         <font>
            <Font name="Franklin Gothic Medium" size="16.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="20.0" left="30.0" />
         </StackPane.margin>
      </Label>
   </children>
</StackPane>